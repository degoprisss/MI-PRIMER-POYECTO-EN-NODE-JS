<!DOCTYPE html>
<html lang="en">
<%- include('partials/headers/header'); -%>
    <body>
        <div class="container">
            <h1>Actualizando el tipo de cuenta</h1>
            <%- include('partials/headers/footer'); -%>
                <% accounts_types.forEach((value)=> { %>
                    <form method="POST" action=/accounts_type_edit/<%=value.id%>>
                        <div class="mb-3">
                            <label for="inputName" class="form-label">Nombre del tipo de cuenta</label>
                            <input type="text" class="form-control" id="inputName" name="name" value=<%=value.name%>>
                        </div>
                        <div class="mb-3">
                            <label for="inputDescription" class="form-label">Descripci√≥n</label>
                            <textarea class="form-control" id="inputDescription" rows="3"
                                name="description"><%= value.description%></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Actualizar</button>
                        <a href="/accounts_types"><button class="btn btn-primary">Cancelar</button></a>
                    </form>                    
                    <% }); %>
        </div>
    </body>

</html>